//投资金额
    $('#input_money').blur(function(){
       BlurMoney();
    });
       
    function BlurMoney() {
      //$investInfo['account_money']+$investInfo['back_money']
        var account_money={$investInfo.account_money};
        var back_money={$investInfo.back_money};
        var pat =  /^\d+$/;
        var str = $('#input_money').val();
        if((account_money+back_money)<str)
        {
           $("#zwyl").html("");
           $('.info').html("<font style='color:#f35900'>输入的金额大于可用金额！</font>");
           return false;
        }
        //把红包的总值设置为零 防止钻漏洞
        $("#redvalue").val('0.00');
        if (str == "") {
            $("#zwyl").html("");
            $('.info').html("<font style='color:#f35900'>输入的金额不能为空！</font>");
            return false;
        }
        var borrow_max = isNaN(parseInt({$newbie.max}))?0:parseInt({$newbie.max});
        var borrow_min = {$newbie.min};
        if(str<borrow_min){
            $('#input_money').val('请输入投资金额');
            $('.info').html("<font style='color:red'>投资金额不能小于起投金额</font>");
            $("#zwyl").html("");
        }else if(str>borrow_max && borrow_max!=0){
            $('#input_money').val('请输入投资金额');
            $('.info').html("<font style='color:red'>投资金额不能大于最大金额限制</font>");
            $("#zwyl").html("");
        }else{
            $('#input_money').val(str);
            $('.info').html("");
                       
        }
    }

          function ZinputFocus(zwinput){
