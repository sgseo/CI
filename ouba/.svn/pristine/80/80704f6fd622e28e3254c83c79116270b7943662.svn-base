              <select  name="capitalsource">
                    <option value="0">请选择资金来源</option>
                <volist name='list' id='vo' key='k'>
                    <option value="{$vo.id}">{$vo.organization}</option>
                </volist>
             </select>

              </br>
              <select name="loandest" >
                <option value="0">请选择借款用途</option>
