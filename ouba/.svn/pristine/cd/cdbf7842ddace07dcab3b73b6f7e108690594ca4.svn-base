<form action="__URL__/bridgeadd" method="post" class="definewidth m20">
    <table class="table table-bordered table-hover definewidth m10">
   
        <tr>
            <td width="10%" class="tableleft">过桥人名称</td>
            <td><input type="text" name="nickname"/></td>
        </tr>
        <tr>
