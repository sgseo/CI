		//取现
		/*
		**$usrid 用户客户号
		**$transamt 取现金额
		**$fee 手续费金额
		**$cashChl 取现渠道
		*/
		public function cash($usrid,$transamt,$fee,$cashChl='')
		{
			$ord = $this->ord();
			$merCustId = $this->merCustId;//商户客户号
			$ordId = $ord['id'];//订单号
			$usrCustId = $usrid;//用户客户号
			$transAmt = number_format($transamt,2,'.','');//取现金额
			$servFee = number_format($fee,2,'.','');//手续费金额
			$servFeeAcctId = 'MDT000001';//手续费扣款子账户
			$openAcctId = '';//开户银行帐号（即取现银行卡号）
			$retUrl = _HUIFU_RETURN.huifu::CASH;//取现回调地址
			//$bgRetUrl = _HUIFU_BACK.huifu::CASH_BACK;//取现后台回调地址
			$bgRetUrl = _CASH_NOTIFYURL;//取现后台回调地址
			
			return $this->chinapnr->cash($merCustId,$ordId,$usrCustId,$transAmt,$servFee,$servFeeAcctId,$openAcctId,$retUrl,$bgRetUrl,'','','','',$cashChl);
		}
		
