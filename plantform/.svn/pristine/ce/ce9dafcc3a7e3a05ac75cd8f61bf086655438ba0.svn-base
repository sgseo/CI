		public function initiativeTender($usrid,$transamt,$borrowercustid,$borrowid,$reqext='')
		{

			$glo = get_global_setting();
			
			$ord = $this->ord();
			$merCustId = $this->merCustId;//商户客户号
			$ordId = $ord['id'];//订单号
			$ordDate = $ord['date'];//订单日期
			$transAmt = number_format($transamt,2,'.','');//交易金额
			$usrCustId = $usrid;//用户客户号
			$maxTenderRate = $glo['maxtenderrate'];//最大投资手续费率
			$borrowerDetails = array();//借款人信息
			$borrowerDetails['BorrowerCustId'] = $borrowercustid;//借款人客户号
			$borrowerDetails['BorrowerAmt'] = number_format($transamt,2,'.','');//借款金额
			$borrowerDetails['BorrowerRate'] =$glo['borrowerrate'];//借款手续费率
			$isFreeze = "Y";//是否冻结
			$freezeord = $this->ord();
			$freezeOrdId = $freezeord['id'];//冻结订单号
			$retUrl=_HUIFU_RETURN.huifu::INI_TENDER;//主动投标回调地址
			//$bgRetUrl= _HUIFU_BACK.huifu::INI_TENDER_BACK;//主动投标后台回调地址 2015-09-30
			$bgRetUrl = _TENDER_NOTIFYURL;
			$info = array();
			$info['borrowerid'] = $borrowercustid;//借款人客户号
			$info['borrowid'] = $borrowid;//标ID 借款人
			$merPriv = base64_encode(json_encode($info));//
			$reqExt=$_POST['reqext'];//应该是一个数组
			file_put_contents('/tmp/zw2.txt',date('m-d H:i:s')."\$reqext1020:".print_r($reqExt,true)."\n",FILE_APPEND);
			file_put_contents('/tmp/zw2.txt',date('m-d H:i:s')."\$transamt ".print_r($transamt,true)."\n",FILE_APPEND);
			return $this->chinapnr->initiativeTender($merCustId,$ordId,$ordDate,$transAmt,$usrCustId,$maxTenderRate,$borrowerDetails,$isFreeze,$freezeOrdId,$retUrl,$bgRetUrl,$merPriv,$reqExt);exit;
		}
		
